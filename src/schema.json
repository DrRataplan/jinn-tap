{
    "hi": {
        "type": "inline",
        "attributes": {
            "rend": {
                "type": "string",
                "default": "i",
                "enum": ["i", "b", "u"]
            }
        },
        "keyboard": {
            "Cmd-b": { "rend": "b" },
            "Cmd-i": { "rend": "i" },
            "Cmd-u": { "rend": "u" }
        },
        "toolbar": {
            "Bold": {
                "attributes": { "rend": "b" },
                "label": "<i class='bi bi-type-bold'></i>"
            },
            "Italic": {
                "attributes": { "rend": "i" },
                "label": "<i class='bi bi-type-italic'></i>"
            },
            "Underline": {
                "attributes": { "rend": "u" },
                "label": "<i class='bi bi-type-underline'></i>"
            }
        }
    },
    "title": {
        "type": "inline",
        "attributes": {
            "level": {
                "type": "string",
                "enum": ["m", "s", "a"]
            }
        },
        "keyboard": {
            "Mod-Alt-t": { "level": "m" }
        },
        "toolbar": {
            "Title": {
                "attributes": { "level": "m" },
                "label": "<i class='bi bi-quote'></i>"
            }
        }
    },
    "persName": {
        "type": "inline",
        "attributes": {
            "key": {
                "type": "string"
            }
        },
        "keyboard": {
            "Mod-Shift-p": {}
        },
        "toolbar": {
            "Person": {
                "attributes": {},
                "label": "<i class='bi bi-person'></i>"
            }
        }
    },
    "placeName": {
        "type": "inline",
        "attributes": {
            "key": {
                "type": "string"
            }
        },
        "keyboard": {
            "Mod-Shift-h": {}
        },
        "toolbar": {
            "Person": {
                "attributes": {},
                "label": "<i class='bi bi-geo-alt'></i>"
            }
        }
    },
    "p": {
        "type": "block",
        "priority": 100,
        "toolbar": {
            "Paragraph": {
                "attributes": {},
                "label": "<i class='bi bi-paragraph'></i>"
            }
        }
    },
    "head": {
        "type": "block",
        "group": "heading",
        "attributes": {
            "type": {
                "type": "string"
            },
            "n": {
                "type": "string"
            }
        },
        "keyboard": {
            "Shift-Mod-1": {}
        },
        "toolbar": {
            "Head": {
                "attributes": {},
                "label": "<i class='bi bi-type-h1'></i>"
            }
        }
    },
    "div": {
        "type": "block",
        "defining": true,
        "content": "heading? block+"
    },
    "item": {
        "type": "listItem",
        "content": "p block*",
        "defining": true
    },
    "list": {
        "type": "list",
        "content": "item+",
        "keyboard": {
            "Mod-Shift-l": {}
        },
        "toolbar": {
            "List": {
                "attributes": {},
                "label": "<i class='bi bi-list-ul'></i>"
            }
        }
    },
    "pb": {
        "type": "empty",
        "label": "pb",
        "attributes": {
            "n": {
                "type": "string"
            }
        },
        "keyboard": {
            "Mod-Shift-p": {}
        },
        "toolbar": {
            "PageBreak": {
                "attributes": { "n": "22" },
                "label": "<i class='bi bi-file-earmark-break'></i>"
            }
        }
    }
} 